<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.reminderfx.ReminderController">

    <!-- TITLE -->
    <VBox spacing="5" StackPane.alignment="TOP_LEFT">
        <padding>
            <Insets bottom="0" left="20.0" right="20.0" top="20.0"/>

        </padding>
        <Label text="REMINDER"/>
        <!-- VocÃª pode adicionar mais controles aqui se desejar -->
    </VBox>

    <!-- LIST OF REMINDERS-->
    <VBox spacing="30" StackPane.alignment="CENTER">
        <padding>
            <Insets bottom="30" left="20.0" right="20.0" top="40.0"/>
        </padding>
        <children>
            <GridPane>
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <children>
                    <Label text="descField" fx:id="descField" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="dataField" fx:id="dataField" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Button text="Edit"  GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    <Button text="Delete"  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </children>
            </GridPane>
        </children>
    </VBox>

    <!-- TABLE VIEW -->
    <VBox spacing="30" StackPane.alignment="CENTER">
        <padding>
            <Insets bottom="30" left="20.0" right="20.0" top="40.0"/>
        </padding>
        <children>
            <TableView fx:id="reminderTableView">
                <columns>
                    <TableColumn fx:id="descColumn" text="Description" />
                    <TableColumn fx:id="dateColumn" text="Date" />
                    <TableColumn fx:id="timeColumn" text="Time" />
                    <TableColumn fx:id="priorityColumn" text="Priority" />
                    <TableColumn fx:id="editColumn" text="Edit" />
                    <TableColumn fx:id="deleteColumn" text="Delete" />
                </columns>
            </TableView>
        </children>
    </VBox>
    <!-- ADD NEW REMINDER -->
    <VBox spacing="30" StackPane.alignment="BOTTOM_LEFT">
        <padding>
            <Insets bottom="5" left="10.0" right="20.0" top="540.0"/>
        </padding>


        <Button text="New Reminder" onAction="#onNewReminderButtonClick"/>

    </VBox>

</StackPane>
